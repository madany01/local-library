<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (genres.length) { %> <% genres.forEach(genre => { %>
            <li>
              <a href="<%= genre.url %> "><%= genre.name %> </a>
            </li>
            <% }) %> <% } else { %>
            <li>There are no genres</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
