<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>

          <form method="post">
            <div class="form-group">
              <label for="authorFirstNameInput" class="form-label">first name</label>
              <input
                type="text"
                name="firstName"
                class="form-control <%= locals.errors?.firstName ? 'is-invalid' : '' %>"
                id="authorFirstNameInput"
                placeholder="john"
                value="<%= locals.author?.firstName || ''%>"
              />
              <%- include('./partials/field-errors', {fieldName: 'firstName'}) %>
            </div>
            <div class="form-group">
              <label for="authorLastNameInput" class="form-label">last name</label>
              <input
                type="text"
                name="lastName"
                class="form-control <%= locals.errors?.lastName ? 'is-invalid' : '' %>"
                id="authorLastNameInput"
                placeholder="doe"
                value="<%= locals.author?.lastName || ''%>"
              />
              <%- include('./partials/field-errors', {fieldName: 'lastName'}) %>
            </div>

            <div class="form-group">
              <label for="authorBirthDate" class="form-label">birth date</label>
              <input
                type="date"
                name="birthDate"
                class="form-control <%= locals.errors?.birthDate ? 'is-invalid' : '' %>"
                id="authorBirthDate"
                placeholder="mm/dd/yyyy"
                value="<%= locals.author?.birthDate || ''%>"
              />
              <%- include('./partials/field-errors', {fieldName: 'birthDate'}) %>
            </div>

            <div class="form-group">
              <label for="authorDeathDate" class="form-label">death date</label>
              <input
                type="date"
                name="deathDate"
                class="form-control <%= locals.errors?.deathDate ? 'is-invalid' : '' %>"
                id="authorDeathDate"
                placeholder="mm/dd/yyyy"
                value="<%= locals.author?.deathDate || ''%>"
              />
              <%- include('./partials/field-errors', {fieldName: 'deathDate'}) %>
            </div>

            <br />
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
