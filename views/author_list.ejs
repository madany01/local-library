<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (authors.length) { %> <% authors.forEach(author=> { %>
            <li>
              <a href="<%= author.url %> "><%= author.name %> </a>
              <% if (author.birthDate || author.deathDate) { %>
              <span><%= author.birthDateFormatted %> - <%= author.deathDateFormatted %></span>
              <% } %>
            </li>
            <% }) %> <% } else { %>
            <li>There are no authors</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
