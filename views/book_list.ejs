<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar') %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (books.length) { %> <% books.forEach(book => { %>
            <li>
              <a href="<%= book.url %> "><%= book.title %> </a>
              <span> (<%= book.author.name %>)</span>
            </li>
            <% }) %> <% } else { %>
            <li>There are no books</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
