<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar') %></div>
        <div class="col-sm-10">
          <h1>ID: <%= bookInstance._id %></h1>

          <p>
            <strong>Title:</strong>
            <span
              ><a href="<%= bookInstance.book.url  %>"
                ><%= bookInstance.book.title%></a
              ></span
            >
          </p>

          <p>
            <strong>Imprint:</strong>
            <span><%= bookInstance.imprint %></span>
          </p>

          <p>
            <strong>Status:</strong>
            <span class="text-<%= bookInstance.statusColor %>"
              ><%= bookInstance.status %></span
            >
          </p>

          <% if (!bookInstance.available) { %>
          <p>
            <strong>Due Back:</strong>
            <span><%= bookInstance.dueBackFormatted %></span>
          </p>

          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
